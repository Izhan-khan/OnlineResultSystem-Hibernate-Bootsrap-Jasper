<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="dto">
	<class name="StudentDTO" table="STUDENT">
		<id name="id" column="ID">
			<generator class="increment"></generator>
		</id>
		<property name="name" type="java.lang.String">
			<column name="NAME" />
		</property>
		<property name="dob" type="java.util.Date">
			<column name="DATE_OF_BIRTH" />
		</property>
		<property name="mobileNo" type="java.lang.String">
			<column name="MOBILE_NO" />
		</property>
		<property name="email" type="java.lang.String">
			<column name="EMAIL" />
		</property>
		<property name="collegeId" type="java.lang.Long">
			<column name="COLLEGE_ID" />
		</property>
		<property name="createdBy" type="java.lang.String"
			length="50">
			<column name="CREATED_BY" />
		</property>
		<property name="modifiedBy" type="java.lang.String"
			length="50">
			<column name="MODIFIED_BY" />
		</property>
		<property name="createdDatetime" type="java.sql.Timestamp">
			<column name="CREATED_DATETIME" />
		</property>
		<property name="modifiedDatetime" type="java.sql.Timestamp">
			<column name="MODIFIED_DATETIME" />
		</property>


	</class>
</hibernate-mapping>